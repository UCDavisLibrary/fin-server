FROM postgres:10.5

COPY db-init.sql /docker-entrypoint-initdb.d/db-init.sql

ARG APP_VERSION
ARG FIN_SERVER_REPO_HASH
ARG FIN_SERVER_REPO_BRANCH
ARG FIN_SERVER_REPO_TAG
ENV APP_VERSION ${APP_VERSION}
ENV FIN_SERVER_REPO_HASH ${FIN_SERVER_REPO_HASH}
ENV FIN_SERVER_REPO_TAG ${FIN_SERVER_REPO_TAG}
ENV FIN_SERVER_REPO_BRANCH ${FIN_SERVER_REPO_BRANCH}